.flash-box
.wrapper
  = render "shared/side_bar"
  .chat-main
    .main-header
      .main-header_left-box
        %h2.main-header_left-box_current-group
          = @group.name
        %ul.main-header_left-box_member-list
          Menber:
          - if user_signed_in?
            = current_user.name 
          %li.main-header_left-box_member-list_menber 
      = link_to  edit_group_path(@group) do
        .main-heder_edit-btn
          Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'new_message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            -# = fa_icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'





